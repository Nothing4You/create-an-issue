{
  "name": "create-an-issue",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "start": "npx ncc run ./src/index.ts",
    "test": "jest --coverage",
    "build": "npx ncc build ./src/index.ts"
  },
  "author": "Jason Etcovitch <jasonetco@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "actions-toolkit": "^6.0.1",
    "front-matter": "^4.0.2",
    "js-yaml": "^4.1.0",
    "nunjucks": "^3.2.3",
    "nunjucks-date-filter": "^0.1.1",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.3",
    "@types/jest": "^29.1.2",
    "@types/nunjucks": "^3.2.1",
    "@vercel/ncc": "^0.38.0",
    "jest": "^29.1.2",
    "nock": "^13.2.9",
    "ts-jest": "^29.0.3",
    "typescript": "^5.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/tests/setup.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      ".+\\.tsx?$": [
        "ts-jest",
        {
          "babelConfig": false
        }
      ]
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.(ts|js)"
    ]
  }
}
